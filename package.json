{
  "name": "gestor-postulaciones-laborales",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "preview": "vite preview",
    "validate-rules": "node scripts/validateRules.js",
    "commit": "git-cz",
    "commit:all": "run-s add-all commit",
    "add-all": "git add .",
    "commit:auto": "node scripts/auto-commit.js",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix --max-warnings=0",
      "npm run validate-rules",
      "git add"
    ],
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "@radix-ui/react-select": "^2.2.4",
    "axios": "^1.9.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "^12.11.4",
    "jwt-decode": "^4.0.0",
    "lucide-react": "^0.344.0",
    "react": "^18.3.1",
    "react-card-flip": "^1.2.3",
    "react-dom": "^18.3.1",
    "react-hot-toast": "^2.5.2",
    "react-icons": "^5.5.0",
    "react-router-dom": "^6.22.3",
    "shadcn-ui": "^0.9.5",
    "tailwind-merge": "^3.2.0",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.27.2",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.9.1",
    "@jest/globals": "^29.7.0",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@types/react-i18next": "^7.8.3",
    "@types/react-icons": "^2.2.7",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.18",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.9.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "eslint-plugin-unused-imports": "^4.1.4",
    "globals": "^15.9.0",
    "husky": "^8.0.3",
    "lint-staged": "^16.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.35",
    "prettier": "^3.5.3",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.5.3",
    "vite": "^4.4.9"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog",
      "types": {
        "agregar": {
          "description": "Agregar una nueva característica (Add a new feature)",
          "title": "Agregar"
        },
        "actualizar": {
          "description": "Actualizar una característica existente (Update an existing feature)",
          "title": "Actualizar"
        },
        "eliminar": {
          "description": "Eliminar código o archivos",
          "title": "Eliminar"
        },
        "corregir": {
          "description": "Corregir un error",
          "title": "Corregir"
        },
        "mejorar": {
          "description": "Mejorar el rendimiento o la funcionalidad",
          "title": "Mejorar"
        },
        "refactorizar": {
          "description": "Refactorizar código sin cambiar funcionalidad",
          "title": "Refactorizar"
        },
        "revertir": {
          "description": "Revertir cambios anteriores",
          "title": "Revertir"
        },
        "estilizar": {
          "description": "Cambios que no afectan el significado del código",
          "title": "Estilizar"
        },
        "documentar": {
          "description": "Cambios en la documentación",
          "title": "Documentar"
        },
        "construir": {
          "description": "Cambios que afectan el sistema de build",
          "title": "Construir"
        },
        "configurar": {
          "description": "Cambios en la configuración",
          "title": "Configurar"
        }
      }
    }
  }
}
